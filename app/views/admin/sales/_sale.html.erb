<tr>
  <td>
    <h4><%= sale.name %></h4>
  </td>
  <td>
    <%= sale.starts_on %>
  </td>
  <td>
    <%= sale.ends_on %>
  </td>
  <td>
    <%= sale.percent_off %>
  </td>
  <td>
    <%= render partial: 'sale_status', locals: { sale: sale } %>
  </td>
  <td>
    <%= link_to fa_icon('trash'), [:admin, sale], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
  </td>
</tr>
