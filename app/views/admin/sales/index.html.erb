<section class="admin-products-index">

  <header class="page-header">
    <h1>Admin &raquo; All Sales</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Sale', new_admin_sale_path, class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default products">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Sale</th>
          <th>Starts On</th>
          <th>Ends On</th>
          <th>Percent Off</th>
          <th>Status</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @sales = Sale.all %>
        <%= render @sales %>
      </tbody>
    </table>

  </div>

</section>
